<!-- Modal -->
<div id="wordModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form action="/Admin/Word/UpdateWord" method="post">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Word</h4>
                </div>
                <div class="modal-body">
                    <input type="text" name="WordId" hidden />
                    <div class="row">
                        <div class="col-lg-4">
                            <label for="Text">Text:</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="Text" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <label for="Text">Type:</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="Type" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <label for="Text">Pronounce:</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="Pronounce" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
