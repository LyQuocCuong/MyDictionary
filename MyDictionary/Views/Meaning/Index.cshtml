@model DictionaryDto.MeaningDto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-success"
        name="btnExampleModal"
        data-toggle="modal"
        data-target="#exampleModal"
        data-examplemodel="@Json.Encode(new DictionaryDto.ExampleDto() { MeaningId = Model.MeaningId })">
    Add Example
</button>
<h2>@Model.MeaningText</h2>
@{ Html.RenderPartial("~/Views/Example/ExampleList.cshtml", Model.ExampleList); }
@{ Html.RenderPartial("~/Views/Example/_ExampleModal.cshtml"); }

<script>
    $(document).on("click", "button[name='btnExampleModal']", function () {
        var model = $(this).data('examplemodel');
        $("#exampleModal input[name='MeaningId']").val(model.MeaningId);
        $("#exampleModal input[name='ExampleId']").val(model.ExampleId);
        $("#exampleModal textarea[name='ExampleText']").val(model.ExampleText);
    });
</script>
